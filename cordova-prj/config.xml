<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mikusa.noisemachine" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>NoiseMachine</name>
    <description>
        A simple white noise / soothing noise machine.
    </description>
    <author email="dan@mikusa.com" href="http://mikusa.com">
        Daniel Mikusa
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/img/icons/Icon-60.png" width="60" height="60" />
        <icon src="www/img/icons/Icon-60@2x.png" width="120" height="120" />
        <icon src="www/img/icons/Icon-60@3x.png" width="180" height="180" />
        <icon src="www/img/icons/Icon-76.png" width="76" height="76" />
        <icon src="www/img/icons/Icon-76@2x.png" width="152" height="152" />
        <icon src="www/img/icons/Icon-Small-40.png" width="40" height="40" />
        <icon src="www/img/icons/Icon-Small-40@2x.png" width="80" height="80" />
        <icon src="www/img/icons/Icon.png" width="57" height="57" />
        <icon src="www/img/icons/Icon@2x.png" width="114" height="114" />
        <icon src="www/img/icons/Icon-72.png" width="72" height="72" />
        <icon src="www/img/icons/Icon-72@2x.png" width="144" height="144" />
        <icon src="www/img/icons/Icon-Small.png" width="29" height="29" />
        <icon src="www/img/icons/Icon-Small@2x.png" width="58" height="58" />
        <icon src="www/img/icons/Icon-Small@3x.png" width="87" height="87" />
        <icon src="www/img/icons/Icon-Small-50.png" width="50" height="50" />
        <icon src="www/img/icons/Icon-Small-50@2x.png" width="100" height="100" />
        <preference name="AllowInlineMediaPlayback" value="true"/>
    </platform>
</widget>
