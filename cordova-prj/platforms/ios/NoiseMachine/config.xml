<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mikusa.noisemachine" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="HandleOpenUrl">
        <param name="ios-package" value="CDVHandleOpenURL" />
        <param name="onload" value="true" />
    </feature>
    <feature name="IntentAndNavigationFilter">
        <param name="ios-package" value="CDVIntentAndNavigationFilter" />
        <param name="onload" value="true" />
    </feature>
    <feature name="GestureHandler">
        <param name="ios-package" value="CDVGestureHandler" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BackgroundAudio">
        <param name="ios-package" value="BackgroundAudio" />
        <param name="onload" value="true" />
    </feature>
    <name>NoiseMachine</name>
    <description>
        A simple white noise / soothing noise machine.
    </description>
    <author email="dan@mikusa.com" href="http://mikusa.com">
        Daniel Mikusa
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <icon height="60" src="www/img/icons/Icon-60.png" width="60" />
    <icon height="120" src="www/img/icons/Icon-60@2x.png" width="120" />
    <icon height="180" src="www/img/icons/Icon-60@3x.png" width="180" />
    <icon height="76" src="www/img/icons/Icon-76.png" width="76" />
    <icon height="152" src="www/img/icons/Icon-76@2x.png" width="152" />
    <icon height="40" src="www/img/icons/Icon-Small-40.png" width="40" />
    <icon height="80" src="www/img/icons/Icon-Small-40@2x.png" width="80" />
    <icon height="57" src="www/img/icons/Icon.png" width="57" />
    <icon height="114" src="www/img/icons/Icon@2x.png" width="114" />
    <icon height="72" src="www/img/icons/Icon-72.png" width="72" />
    <icon height="144" src="www/img/icons/Icon-72@2x.png" width="144" />
    <icon height="29" src="www/img/icons/Icon-Small.png" width="29" />
    <icon height="58" src="www/img/icons/Icon-Small@2x.png" width="58" />
    <icon height="87" src="www/img/icons/Icon-Small@3x.png" width="87" />
    <icon height="50" src="www/img/icons/Icon-Small-50.png" width="50" />
    <icon height="100" src="www/img/icons/Icon-Small-50@2x.png" width="100" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="SuppressesLongPressGesture" value="false" />
    <preference name="Suppresses3DTouchGesture" value="false" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
</widget>
